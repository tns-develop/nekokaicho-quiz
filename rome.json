{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "lineWidth": 120,
    "ignore": [
        "node_modules",
        ".next"
    ],
    "formatWithErrors": true
  },
  "linter": {
